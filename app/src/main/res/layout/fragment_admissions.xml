<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent">
	<androidx.constraintlayout.widget.ConstraintLayout
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_margin="@dimen/_10sdp">
		<TextView
			android:id="@+id/txtAdmission1"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="@dimen/_10sdp"
			android:text="Admission1"
			style="@style/FontRegular12"
			app:layout_constraintTop_toTopOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintEnd_toEndOf="parent" />
		<TextView
			android:id="@+id/txtAdmission2"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="@dimen/_10sdp"
			android:text="Admission2"
			style="@style/FontRegular12"
			app:layout_constraintTop_toBottomOf="@id/txtAdmission1"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintEnd_toEndOf="parent" />
		<TextView
			android:id="@+id/txtAdmission3"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="@dimen/_10sdp"
			android:text="Admission3"
			style="@style/FontRegular12"
			app:layout_constraintTop_toBottomOf="@id/txtAdmission2"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintEnd_toEndOf="parent" />
		<Button
			android:id="@+id/btnApply"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="@dimen/_20sdp"
			android:text="Apply"
			style="@style/ButtonNormal"
			app:layout_constraintTop_toBottomOf="@id/txtAdmission3"
			app:layout_constraintEnd_toEndOf="parent" />
	</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
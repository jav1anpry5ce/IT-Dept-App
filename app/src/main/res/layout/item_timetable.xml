<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:layout_margin="@dimen/_10sdp"
	app:cardCornerRadius="@dimen/_5sdp"
	app:cardElevation="@dimen/_5sdp">
	<androidx.constraintlayout.widget.ConstraintLayout
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_margin="@dimen/_10sdp">
		<TextView
			android:id="@+id/txtCode"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Code"
			android:alpha="0.6"
			style="@style/FontBold12"
			app:layout_constraintTop_toTopOf="parent"
			app:layout_constraintStart_toStartOf="parent" />
		<TextView
			android:id="@+id/txtTitle"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_marginTop="@dimen/_5sdp"
			android:text="Title"
			android:alpha="0.8"
			style="@style/FontBold12"
			app:layout_constraintTop_toBottomOf="@id/txtCode"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintEnd_toEndOf="parent" />
		<TextView
			android:id="@+id/txtDay"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_marginTop="@dimen/_5sdp"
			android:text="Day"
			style="@style/FontRegular12"
			app:layout_constraintTop_toBottomOf="@id/txtTitle"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintEnd_toStartOf="@id/txtBegin" />
		<TextView
			android:id="@+id/txtBegin"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="@dimen/_5sdp"
			android:layout_marginEnd="@dimen/_10sdp"
			android:text="Begin"
			style="@style/FontRegular12"
			app:layout_constraintTop_toBottomOf="@id/txtTitle"
			app:layout_constraintStart_toEndOf="@id/txtDay"
			app:layout_constraintEnd_toStartOf="@id/txtEnd"/>
		<TextView
			android:id="@+id/txtEnd"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="@dimen/_5sdp"
			android:layout_marginStart="@dimen/_10sdp"
			android:text="End"
			style="@style/FontRegular12"
			app:layout_constraintTop_toBottomOf="@id/txtTitle"
			app:layout_constraintStart_toEndOf="@id/txtBegin"
			app:layout_constraintEnd_toEndOf="parent" />
	</androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>